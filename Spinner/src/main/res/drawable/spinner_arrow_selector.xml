<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true" android:state_active="true" android:state_focused="true" android:state_hovered="true" android:state_pressed="true" android:state_selected="true" android:state_window_focused="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1px" android:color="@color/white" />
                    <solid android:color="#00000000" />
                    <padding android:right="5px" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/arrow_up" />
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1px" android:color="@color/white" />
                    <solid android:color="#00000000" />
                    <padding android:right="5px" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="end" android:src="@drawable/arrow_down_filling" />
            </item>
        </layer-list>
    </item>
</selector>