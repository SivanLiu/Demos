<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_checked="true" android:state_pressed="true" android:state_hovered="true">
        <shape>
            <solid android:color="#DA2A2A" />
            <corners android:bottomLeftRadius="5px" android:bottomRightRadius="5px" />
            <stroke android:width="1dp" android:color="#DEDEDE" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape>
            <solid android:color="#ffffff" />
            <corners android:bottomLeftRadius="5px" android:bottomRightRadius="5px" />
            <stroke android:width="1dp" android:color="#DEDEDE" />
        </shape>
    </item>
</selector>